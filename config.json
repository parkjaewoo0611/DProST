{
    "name": "DProST",
    "gpu_id": "0",
    "arch": {
        "type": "DProST",
        "args": {
            "img_ratio": 0.5,
            "ftr_size": 128,
            "iteration": 3,
            "model_name": "res34",
            "occlusion": true,
            "N_z": 100
        }
    },
    "data_loader": {
        "type": "DataLoader",
        "args":{
            "data_dir": "../Dataset/LINEMOD",
            "batch_size":2,
            "obj_list" : [1],
            "reference_N": 8,
            "is_pbr": true,
            "is_syn": false,
            "shuffle": true,
            "validation_split": 0.0,
            "test_as_valid": true,
            "num_workers": 4,
            "FPS": true
        }
    },
    "mesh_loader": {
        "type": "MeshesLoader",
        "args":{
            "N_pts" : 64
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0
        }
    },
    "loss": "grid_distance_loss",
    "metrics": [
        "ADD_score_10"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 2000,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 10,
        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,
        "monitor": "max val_ADD_score_10",
        "early_stop": 1000,
        "tensorboard": true
    }
}
