{
    "name": "ProjectivePose",
    "n_gpu": 1,
    "arch": {
        "type": "ProjectivePose",
        "args": {
            "img_ratio": 0.5,
            "render_size": 128
        }
    },
    "data_loader": {
        "type": "DataLoader",
        "args":{
            "data_dir": "../Dataset/LINEMOD",
            "batch_size": 16,
            "obj_list" : [5],
            "img_ratio" : 0.5,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "mesh_loader": {
        "type": "MeshesLoader",
        "args":{
            "mesh_dir": "../Dataset/LINEMOD/models",
            "obj_list" : [5],
            "render_size" : 128
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0
        }
    },
    "loss": "grid_distance_loss",
    "metrics": [
        "ADD_score"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
